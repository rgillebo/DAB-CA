<!DOCTYPE html>
<html>
<head>
  <title>DAB - Manage Temperament</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../js/common.js"></script>
</head>
<body>
  <%- include('./partials/navbar.ejs', {user: user}) %>
  <%- include('partials/_flashMessages') %>
  <div class="container-fluid mt-5">
    <h2 class="p-3 text-center">Manage Temperament</h2>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-noroff">Id</span>
        <span class="col py-1 bg-noroff">Description</span>
        <span class="col py-1 bg-noroff">Options</span>
      </div>
      <% temperamentList.forEach(function(temp) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light">
            <%= temp.id %>
          </span>
          <span class="col py-1 bg-light">
            <form action="/temperament/update/<%= temp.id %>" method="post">
              <div class="input-group">
                <input type="text" class="form-control" name="description" value="<%= temp.description %>" required>
                <button type="submit" class="btn btn-warning btn-sm">Update</button>
              </div>
            </form>
          </span>
          <span class="col py-1 bg-light text-center">
            <form action="/temperament/delete/<%= temp.id %>" method="post" style="display: inline;">
              <button type="submit" class="btn-sm btn-danger">Delete</button>
            </form>
          </span>
        </div>
      <% }); %>
      <hr>
      
      <div class="row justify-content-center mt-2">
        <div class="col-4">
          <form action="/temperament/add" method="POST">
            <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="New Temperament Description" name="description" required>
              <button class="btn btn-success" type="submit">Add New Temperament</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
