<!DOCTYPE html>
<html>
<head>
  <title>DAB - Manage Species</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../js/common.js"></script>
</head>
<body>
  <%- include('./partials/navbar.ejs', {user: user}) %>
  <%- include('partials/_flashMessages') %>
  <div class="container-fluid mt-5">
    <h2 class="p-3 text-center">Manage Species</h2>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-noroff">Id</span>
        <span class="col py-1 bg-noroff">Name</span>
        <span class="col py-1 bg-noroff">Options</span>
      </div>
      <% speciesList.forEach(function(speciesItem) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light">
            <%= speciesItem.id %>
          </span>
          <span class="col py-1 bg-light">
            <form action="/species/update/<%= speciesItem.id %>" method="POST">
              <div class="input-group">
                <input type="text" class="form-control" name="name" value="<%= speciesItem.name %>" required>
                <button type="submit" class="btn btn-warning btn-sm">Update</button>
              </div>
            </form>
          </span>
          <span class="col py-1 bg-light text-center">
            <form action="/species/delete/<%= speciesItem.id %>" method="POST" style="display: inline;">
              <button type="submit" class="btn-sm btn-danger">Delete</button>
            </form>
          </span>
        </div>
      <% }); %>
      <hr>
      <div class="row justify-content-center">
        <div class="col-4">
          <form action="/species/add" method="POST">
            <div class="mb-3">
              <label for="speciesName" class="form-label">New Species Name:</label>
              <input type="text" class="form-control" id="speciesName" name="name" required>
              <button type="submit" class="btn btn-success mt-2">Add New Species</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
